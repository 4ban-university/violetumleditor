<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>violetproduct-swing</artifactId>
	<name>Violet UML Editor</name>
	<description>Violet UML Editor Swing application</description>
    <version>${applicationVersion}</version>
    <packaging>jar</packaging>
    <parent>
        <groupId>com.horstmann.violet</groupId>
        <artifactId>parent</artifactId>
        <version>1.0.0</version>
    </parent>
    <dependencies>
        <dependency>
            <groupId>com.horstmann.violet</groupId>
            <artifactId>violet-framework</artifactId>
            <version>${applicationVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.horstmann.violet</groupId>
            <artifactId>violetplugin-activitydiagram</artifactId>
            <version>${applicationVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.horstmann.violet</groupId>
            <artifactId>violetplugin-classdiagram</artifactId>
            <version>${applicationVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.horstmann.violet</groupId>
            <artifactId>violetplugin-objectdiagram</artifactId>
            <version>${applicationVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.horstmann.violet</groupId>
            <artifactId>violetplugin-sequencediagram</artifactId>
            <version>${applicationVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.horstmann.violet</groupId>
            <artifactId>violetplugin-statediagram</artifactId>
            <version>${applicationVersion}</version>
        </dependency>
        <dependency>
            <groupId>com.horstmann.violet</groupId>
            <artifactId>violetplugin-usecasediagram</artifactId>
            <version>${applicationVersion}</version>
        </dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>1.3.3</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<filters>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>META-INF/*.SF</exclude>
										<exclude>META-INF/*.DSA</exclude>
										<exclude>META-INF/*.RSA</exclude>
									</excludes>
								</filter>
							</filters>
							<transformers>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/services/com.horstmann.violet.framework.plugin.IDiagramPlugin</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<mainClass>com.horstmann.violet.UMLEditorApplication</mainClass>
								</transformer>
							</transformers>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
